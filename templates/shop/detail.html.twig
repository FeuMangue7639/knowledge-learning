{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-primary">{{ course.title }}</h2>
        <p class="text-muted">{{ course.category }}</p>
        <p>{{ course.description }}</p>
        <p class="text-success fw-bold">{{ course.price }} €</p>

        <h4 class="mt-4">Leçons incluses :</h4>
        <ul>
            {% for lesson in course.lessons %}
                <li>{{ lesson.title }} - <span class="text-success">{{ lesson.price }} €</span></li>
            {% else %}
                <p class="text-muted">Aucune leçon disponible pour ce cours.</p>
            {% endfor %}
        </ul>

        <a href="{{ path('app_shop') }}" class="btn btn-secondary mt-3">Retour à la boutique</a>
    </div>
</div>
{% endblock %}
