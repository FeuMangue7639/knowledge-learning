{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-box p-5 rounded shadow bg-white w-50 border border-dark">
        <h2 class="text-center mb-4">Se connecter</h2>

        <!-- ✅ Affichage du message flash après inscription -->
        {% for message in app.flashes('info') %}
            <div class="alert alert-info text-center mt-3">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="username">Adresse mail :</label>
                <input type="email" id="username" name="_username" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>

            <div class="form-check my-2">
                <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Se connecter</button>
        </form>

        <div class="divider my-3"></div>
        <div class="already-registered text-center">
            <p>Pas encore inscrit ?</p>
            <a href="{{ path('app_register') }}" class="btn btn-secondary w-100">Créer un compte</a>
        </div>
    </div>
</div>
{% endblock %}

