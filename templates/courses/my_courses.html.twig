{% extends 'base.html.twig' %}

{% block title %}Mes Cours{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center text-primary">Mes Cours et Leçons</h2>

    {% if coursesWithLessons is empty %}
        <p class="text-center text-muted">Vous n'avez encore acheté aucun cours ou leçon.</p>
    {% else %}
        <div class="row">
            {% for courseEntry in coursesWithLessons %}
                {% set course = courseEntry.course %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text">
                            Vous avez accès à {{ courseEntry.lessons|length }} / {{ course.lessons|length }} leçons.
                        </p>
                        <a href="{{ path('app_my_course_detail', {'id': course.id}) }}" class="btn btn-primary">Voir les leçons</a>

                        {% if certifications|filter(cert => cert.course.id == course.id)|length > 0 %}
                            <span class="badge bg-success mt-2">Certification obtenue</span>
                        {% else %}
                            <p class="text-warning mt-2">Certification non encore obtenue.</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="text-center mt-4" style="padding-bottom: 50px;">
        <a href="{{ path('app_shop') }}" class="btn btn-secondary">Retour à la boutique</a>
    </div>
</div>
{% endblock %}
