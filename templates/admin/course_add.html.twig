{% extends 'base.html.twig' %}

{% block title %}Ajouter un Cours{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary mb-4">Ajouter un Cours</h2>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

                <div class="mb-3">
                    <label class="form-label fw-bold">Titre du Cours</label>
                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Cours de guitare'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Description</label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Brève description du cours'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Prix (€)</label>
                    {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 49.99'}}) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_courses') }}" class="btn btn-secondary">Retour</a>
                    <button type="submit" class="btn btn-success">Ajouter</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
