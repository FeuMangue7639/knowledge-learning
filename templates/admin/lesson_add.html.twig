{% extends 'base.html.twig' %}

{% block title %}Ajouter une Leçon{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary mb-4">Ajouter une Leçon</h2>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

                <div class="mb-3">
                    <label class="form-label fw-bold">Titre de la Leçon</label>
                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Les bases du HTML'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Contenu</label>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Contenu détaillé de la leçon'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Prix (€)</label>
                    {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 19.99'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Cours associé</label>
                    {{ form_widget(form.course, {'attr': {'class': 'form-select'}}) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_lessons') }}" class="btn btn-secondary">Retour</a>
                    <button type="submit" class="btn btn-success">Ajouter</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
